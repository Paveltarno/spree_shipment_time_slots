<div data-hook="admin_time_slot_day_plan_form_fields" class="row">
  <div class="align-center">
    <%= f.field_container :name do %>
      <%= f.label :name, Spree.t(:name) %> <span class="required">*</span><br />
      <%= f.text_field :name %>
      <%= f.error_message_on :name %>
    <% end %>

    <!-- placeholder for single plan forms -->
    <div id="time_slot_single_plans" data-hook="time_slot_single_plans">
      <% @time_slot_day_plan.shipment_time_slot_single_plans.each do |single_plan| %>
        <%= render partial: "single_plan_form" %>
      <% end %>
    </div>

    <div id="new_single_plan_link">
      <%= link_to_add_nested_fields("add_time_slot", f, "shipment_time_slot_single_plans") %>
    </div>

  </div>
</div>
